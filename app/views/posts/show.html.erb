<div class="row">
  <p id="notice"><%= notice %></p>

  <h2>
    <%= @post.title %>
  </h2>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>

  <h2>Comments</h2>
  <div id="comments">
    <%= render :partial => @post.comments %>
  </div>

  <%= form_for [@post, Comment.new] do |f| %>
    <p>
      <%= f.label :body, "New comment" %><br/>
      <%= f.text_area :body %>
    </p>
    <p><%= f.submit "Add comment" %></p>
<% end %>

</div>
